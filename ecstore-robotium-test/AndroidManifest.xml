<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yahoo.mobile.client.android.ecstore.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" />

    <instrumentation
        android:name="com.zutubi.android.junitreport.JUnitReportTestRunner"
        android:targetPackage="com.yahoo.mobile.client.android.ecstore" />

       <!-- The account sdk required permission, you can copy to your app. -->
    <permission
        android:name="com.yahoo.mobile.client.android.permissions.YAHOO_INTER_APP"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.yahoo.mobile.client.android.permissions.YAHOO_INTER_APP" />

    <!-- Uses for yahoo search SDK -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Use for network request, required -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Use for android account manager, required -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <!-- Use for wake lock, optional -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Use for send and receive sms, optional -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- end of account sdk -->

    <!-- YI13N -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Cache -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="android.test.runner" />
    </application>
	
</manifest>